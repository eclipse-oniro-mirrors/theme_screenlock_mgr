import("//build/ohos.gni")
import("../../../screenlock.gni")
import("//build/config/components/ets_frontend/ets2abc_config.gni")

config("screenlock_mgr_frameworks_js_ani_config") {
  visibility = [ ":*" ]
  include_dirs = [ "include" ]

  cflags_cc = []
}

ohos_shared_library("ani_screenlock") {
  if (is_standard_system) {
    sanitize = {
      cfi = true
      cfi_cross_dso = true
      debug = false
      integer_overflow = true
      boundary_sanitize = true
      ubsan = true
    }
    branch_protector_ret = "pac_ret"
    include_dirs = [ "${screenlock_mgr_path}/services/include" ]

    public_configs = [ ":screenlock_mgr_frameworks_js_ani_config" ]

    sources = [
      "src/ani_screenlock_ability.cpp"
    ]

    deps = [
      "${screenlock_mgr_path}/interfaces/inner_api:screenlock_client_static",
    ]

    external_deps = [
      "c_utils:utils",
      "eventhandler:libeventhandler",
      "hilog:libhilog",
      "hitrace:hitrace_meter",
      "ipc:ipc_single",
      "runtime_core:ani",
    ]

    relative_install_dir = "module"
    subsystem_name = "theme"
    part_name = "screenlock_mgr"
  }
}

generate_static_abc("screenlock_abc") {
  arktsconfig =
      "${screenlock_mgr_path}/frameworks/ani/screenlock/screenlock_config.json"
  dst_file = "$target_out_dir/screenlock.abc"
  out_puts = [ "$target_out_dir/screenlock.abc" ]
 
  #is_boot_abc = "True"
  #device_dst_file = "system/framework/screenlock.abc"
}

ohos_static_library("screenlock_static") {
  if (is_standard_system) {
    sanitize = {
      cfi = true
      cfi_cross_dso = true
      debug = false
      integer_overflow = true
      boundary_sanitize = true
      ubsan = true
    }
    branch_protector_ret = "pac_ret"
    testonly = true
    include_dirs = [ "${screenlock_mgr_path}/services/include" ]

    public_configs = [ ":screenlock_mgr_frameworks_js_ani_config" ]

    sources = [
      "src/sts_screenlock_ability.cpp"
    ]

    deps = [
      "${screenlock_mgr_path}/interfaces/inner_api:screenlock_client_static",
    ]

    external_deps = [
      "c_utils:utils",
      "eventhandler:libeventhandler",
      "hilog:libhilog",
      "hitrace:hitrace_meter",
      "ipc:ipc_single",
      "runtime_core:ani",
    ]

    subsystem_name = "theme"
    part_name = "screenlock_mgr"
  }
}
